@using CarPortal.Web.Areas.Administration.Models;
@model UserRoleViewModel

@{
    ViewData["Title"] = "User management";
}

<h1>@ViewData["Title"]</h1>

<div class="align-content-lg-center">
    <form asp-action="GiveRole" asp-controller="UserManagement" method="post" enctype="multipart/form-data">
        <h5 class="form-label">Roles:</h5>
        <div class="input-group mb-3">
            <div class="input-group">
                <div class="form-group-text">
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <div class="form-check">
                            <input asp-for="@Model.RoleName" class="form-check-input" type="radio" value="@role">
                            <label class="form-check-label">
                                @role
                            </label>
                        </div>
                    }
                </div>
            </div>
            <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Enter username">
            <button class="btn btn-primary col-4" type="submit">Add User to Role</button>
        </div>
    </form>
</div>