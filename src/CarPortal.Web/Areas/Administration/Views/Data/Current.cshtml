<div class="align-content-center">
    <form asp-action="Add" asp-route-dataType="region" method="post" enctype="multipart/form-data">
        <h5 class="form-label mt-3">Regions:</h5>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Available</button>
            <ul class="dropdown-menu">
