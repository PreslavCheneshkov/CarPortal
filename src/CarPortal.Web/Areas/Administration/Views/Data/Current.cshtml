@using CarPortal.Web.Areas.Administration.Models;
@model DataViewModel

@{
    ViewData["Title"] = "Current data";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />


<div class="align-content-lg-center">
    <form asp-action="Add" asp-route-dataType="vehicleCategory" method="post" enctype="multipart/form-data">
        <h5 class="form-label">Vehicle categories:</h5>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Available</button>
            <ul class="dropdown-menu">
                @foreach (var category in Model.VehicleCategories)
                {
                    <li class="dropdown-item">@category</li>
                }

            </ul>
            <input type="text" class="form-control" asp-for="@Model.NewCategory" placeholder="Enter new vehicle category">
            <button class="btn btn-primary col-4" type="submit">Add Category</button>
        </div>
    </form>
</div>

<div class="align-content-lg-center">
    <form asp-action="Add" asp-route-dataType="manufacturer" method="post" enctype="multipart/form-data">
        <h5 class="form-label">Manufacturers:</h5>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Available</button>
            <ul class="dropdown-menu">
                @foreach (var manufacturer in Model.Manufacturers)
                {
                    <li class="dropdown-item">@manufacturer.Name</li>
                }

            </ul>
            <input type="text" class="form-control" asp-for="@Model.NewManufacturer" placeholder="Enter new manufacturer">
            <button class="btn btn-primary col-4" type="submit">Add Manufacturer</button>
        </div>
    </form>
</div>


<div class="border border-2 align-content-center">
    <h5 class="form-label mt-2 ms-2">Models</h5>
    <form asp-action="Add" asp-route-dataType="model" method="post" enctype="multipart/form-data">
        <div class="ms-2">

            <div class="mb-3">
                <label class="form-label">Select manufacturer:</label>
                <select id="manufacturerSelect" onselect="GetModelsForManufacturer" asp-for="@Model.NewModelManufacturerId" class="form-control">
                    <option value="null"></option>
                    @foreach (var manufacturer in @Model.Manufacturers)
                    {
                        <option value="@manufacturer.Id">@manufacturer.Name</option>
                    }
                </select>
            </div>
            <div class="col">
                <form asp-action="Add" asp-route-dataType="model" method="post" enctype="multipart/form-data">
                    <h5 class="form-label">Models:</h5>
                    <div class="input-group mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Available</button>
                        <ul id="modelSelect" class="dropdown-menu">
                        </ul>
                        <input type="text" class="form-control" asp-for="@Model.NewModel" placeholder="Enter new model">
                        <button class="btn btn-primary col-4" type="submit">Add Model</button>
                    </div>
                </form>
            </div>
        </div>
    </form>
</div>

<div class="align-content-center">
    <form asp-action="Add" asp-route-dataType="transmissionType" method="post" enctype="multipart/form-data">
        <h5 class="form-label mt-3">Transmission types:</h5>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Available</button>
