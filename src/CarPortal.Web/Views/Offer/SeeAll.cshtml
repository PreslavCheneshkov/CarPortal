@using CarPortal.Web.Models.Offer
@model List<SeeAllOffersViewModel>

@{
    ViewBag.Title = "Browse all";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    @foreach (var item in @Model)
    {
        <div class="card col-md-3 m-3">
            <img class="card-img-top" src="@item.ThumbnailUrl" alt="Car image">
            <div class="card-body">
                <h5 class="card-title">@(item.Manufacturer + @item.Model)</h5>
                <p class="card-text">Offer Info</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@item.Price</li>
                <li class="list-group-item">@item.FuelType</li>
                <li class="list-group-item">@item.Year</li>
            </ul>
            <div class="card-body">
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>
        
