@model OfferDetailsViewModel

@{
    ViewBag.Title = "Offer Details";
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@Model.ThumbnailUrl" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Car.Manufacturer @Model.Car.Model</h5>
        <p class="card-text">@Model.ContactPhoneNumber</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Car.FuelType</li>
        <li class="list-group-item">@Model.Car.Mileage km</li>
        <li class="list-group-item">@Model.Car.TransmissionType</li>
    </ul>
    <div class="card-body">
        <a href="#" class="card-link">Seller profile</a>
        <a href="#" class="card-link">Browse other simillar models</a>
    </div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.PictureIds.Count(); i++)
        {
            var picture = Model.PictureIds[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                    src="@picture" alt="Picture">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
