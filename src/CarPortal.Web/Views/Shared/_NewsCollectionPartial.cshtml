<div class="row">
    @foreach (var item in @Model)
    {
        <div class="card">
            <div class="card-header">
                @item.CreatedOn
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Author</p>
                <a asp-action="NewsArticleDetails" asp-controller="News" asp-route-id="@item.Id" class="btn btn-primary">Read full article</a>
            </div>
        </div>
    }
</div>