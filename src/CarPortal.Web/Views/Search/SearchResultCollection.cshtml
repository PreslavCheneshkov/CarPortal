@using CarPortal.Web.Models.Offer
@model List<OfferInCollectionViewModel>

@{
    ViewBag.Title = "Search results:";
}

<h1 class="text-center">@ViewBag.Title</h1>
<hr />
@{
    if (Model.Count == 0)
    {
        <div class="text-center">
            <h3>There are no offers that match your criteria.</h3>
            <a class="btn btn-primary mt-4" asp-action="Offers" asp-controller="Search">New Search</a>
        </div>
    }
    else
    {
        <partial name="_OfferCollectionPartial"></partial>
    }
}


