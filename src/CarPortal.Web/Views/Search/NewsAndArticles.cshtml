@using CarPortal.Web.Models.Search;
@model NewsArticlesSearchViewModel

<h3 class="text-center">Search news and articles</h3>
<hr />

<form asp-action="NewsAndArticles" method="post" enctype="multipart/form-data">
    <div class="">
        <label class="form-label">Name:</label>
        <input class="form-control" asp-for="@Model.Name" />
    </div>

    <input class="btn btn-primary" type="submit" value="Search" />
</form>

<h3 class="text-center">Articles: @Model.Articles.Count</h3>
<hr />

@if (Model.Articles.Count == 0)
{
    <h4 class="text-center">No articles matching your search</h4>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Link</th>
        </tr>
        @foreach (var result in @Model.Articles)
        {
            <tr>
                <td>
                    @result.Title
                </td>
                <td>
                    @result.Author
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="NewsArticleDetails" asp-controller="News" asp-route-id="@result.ArticleId">Read full article</a>
                </td>
            </tr>
        }
    </table>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}