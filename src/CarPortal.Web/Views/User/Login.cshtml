@using CarPortal.Web.Models.User
@model LoginFormViewModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<br />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="login" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserName">Username</label>
                <input asp-for="@Model.UserName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password" class="form-label"></label>
                <input asp-for="@Model.Password" type="password" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            </div>
        </form>
    </div>
</div>